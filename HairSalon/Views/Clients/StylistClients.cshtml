@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Stylist Clients</h1>

<hr />

@if (@Model.Count == 0)
{
  <h3>No clients for this stylist have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Stylist.Name}", "Details", new { id = client.ClientId }) | Client: @client.Name</li>
    
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>